# ===========================================
# AI Repo Scan - Environment Configuration
# ===========================================
# Development Environment Configuration
NODE_ENV=development

# Application Configuration
PORT=3000

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
# PostgreSQL container configuration (for Docker)
POSTGRES_DB=ai_db_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database connection URL for application (constructed from above)
DATABASE_URL=postgresql://postgres:password@postgres:5432/ai_db_dev

# ===========================================
# Redis Configuration
# ===========================================
# Redis connection URL for caching
REDIS_URL=redis://redis:6379

# Redis container configuration (for Docker)
REDIS_PORT=6379

# ===========================================
# Authentication Configuration
# ===========================================
# NextAuth.js secret key (change this in production!)
NEXTAUTH_SECRET=dev-secret-key-change-this-in-production

# NextAuth.js URL for the application
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# External API Configuration
# ===========================================
# GitHub API token for repository scanning
# Get your token from: https://github.com/settings/tokens
GH_TOKEN=your-github-token-here

# ===========================================
# pgAdmin Configuration (Development)
# ===========================================
# pgAdmin web interface credentials
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5050
PGADMIN_CONFIG_SERVER_MODE=False
PGADMIN_CONFIG_MASTER_PASSWORD_REQUIRED=False

# ===========================================
# Development Tools Configuration
# ===========================================
# Prisma configuration
PRISMA_GENERATE_DATAPROXY=false

# ===========================================
# Production Override Notes
# ===========================================
# For production deployment, override these values:
# - NODE_ENV=production
# - POSTGRES_DB=ai_db
# - POSTGRES_USER=postgres
# - POSTGRES_PASSWORD=your-secure-password
# - POSTGRES_HOST=postgres
# - POSTGRES_PORT=5432
# - REDIS_URL=redis://your-redis-host:6379
# - REDIS_PORT=6379
# - NEXTAUTH_SECRET=your-production-secret-key
# - NEXTAUTH_URL=https://your-domain.com
# - PGADMIN_DEFAULT_PASSWORD=your-secure-admin-password
# - GH_TOKEN=your-production-github-token
